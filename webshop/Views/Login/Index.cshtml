@model webshop.Models.Login
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      <h4>Login</h4>
      <hr />
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      <div class="form-group">
        <div class="col-md-10">
          @Html.EditorFor(model => model.Benutzername, new { htmlAttributes = new { @class = "form-control", placeholder = "Benutzername" } })
          @Html.ValidationMessageFor(model => model.Benutzername, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-10">
          @Html.EditorFor(model => model.Passwort, new { htmlAttributes = new { @class = "form-control", placeholder = "Passwort" } })
          @Html.ValidationMessageFor(model => model.Passwort, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <input type="submit" value="Login" class="btn btn-default" />
        </div>
      </div>
    </div>
}
@{
    Html.RenderPartial("_Success");
    Html.RenderPartial("_Error");
}
