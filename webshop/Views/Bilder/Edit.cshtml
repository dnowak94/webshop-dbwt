@model webshop.Models.MyBild

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutBE.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Bilder", FormMethod.Post, new { enctype = "multipart/form-data", runat = "server", data_ajax = "false" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      <h4>Bild</h4>
      <hr />
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      @Html.HiddenFor(model => model.Id)

      @Html.EditorForModel()
      
      <img src="@Model.Base64Representation" alt="@Model.Alt_Text" class="img-responsive" />

      <div class="form-group">
        <div class="col-md-6">
          <input type="file" name="bild" accept="image/*" />
          <input type="submit" value="Upload" class="btn btn-default" />
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <input type="submit" value="Save" class="btn btn-default" />
        </div>
      </div>
    </div>
}

<div>
  @Html.ActionLink("Back to List", "Index")
</div>
